<Window x:Class="CSI124_Final.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSI124_Final"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid Background="#FF6E6767">
        <Canvas Margin="74,48,74,48" Background="#FFF0E4E4">
            <Label Content="   User Name" Canvas.Left="91" Canvas.Top="102" Height="37" Width="153" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="22"/>
            <TextBox x:Name="txtUserName" Canvas.Left="244" TextWrapping="Wrap" Canvas.Top="102" Width="286" HorizontalAlignment="Left" VerticalAlignment="Center" Height="34"/>
            <Label Content="     Password" Canvas.Left="91" Canvas.Top="152" Height="37" Width="153" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBox x:Name="txtPassword" Canvas.Left="244" TextWrapping="Wrap" Canvas.Top="152" Width="286" Height="34" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Button x:Name="btnLogin" Content="Login" Canvas.Left="254" Canvas.Top="209" HorizontalAlignment="Left" VerticalAlignment="Top" Width="160" Height="50" FontSize="25" Click="btnLogin_Click"/>
        </Canvas>
    </Grid>
</Window>
